@model Tuple<MovieRaterWebApp.Models.Movie, MovieRaterWebApp.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<div class="row center-align">
    <h3>Vote your favourite movie</h3>
    <h4>We have @ViewBag.MovieCount movies in our database!</h4>
</div>
<div class="row">
    <div class="col s6">
        <div class="card">
            <div class="card-content">
                <span class="card-title">@Model.Item1.Title</span>
                <p>@Model.Item1.Director</p>
            </div>
            <div class="card-action">
                <form name="movie" asp-controller="Movies" asp-action="Vote" method="post">
                    <input type="hidden" name="id" value="@Model.Item1.Id">
                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        Vote
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="col s6">
        <div class="card darken-1">
            <div class="card-content">
                <span class="card-title">@Model.Item2.Title</span>
                <p>@Model.Item2.Director</p>
            </div>
            <div class="card-action">
                <form name="movie" asp-controller="Movies" asp-action="Vote" method="post">
                    <input type="hidden" name="id" value="@Model.Item2.Id">
                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        Vote
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

